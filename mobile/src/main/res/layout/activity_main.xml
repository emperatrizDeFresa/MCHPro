<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:layout_gravity="center_horizontal"
        android:background="?attr/colorPrimaryDark"
        android:orientation="vertical">
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="26dp"
        android:paddingTop="2dp">

        <ImageView
            android:id="@+id/imageViewmch"
            android:layout_width="50dp"
            android:layout_height="200dp"
            android:layout_marginRight="30dp"
            android:scaleType="centerInside"
            android:src="@drawable/title"/>

        <emperatriz.mchprofessional.CanvasView
            android:id="@+id/view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"/>

        <ImageView
            android:id="@+id/info"
            android:layout_width="50dp"
            android:layout_height="200dp"
            android:layout_marginLeft="30dp"
            android:scaleType="centerInside"
            android:src="@drawable/info"/>

    </LinearLayout>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|end"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="-28dp"
        android:src="@drawable/sendtowatch" />

    <TabHost
        android:id="@+id/tab_host"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="-28dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TabWidget
                android:id="@android:id/tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_weight="0"
                />


            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_weight="1"
                >

                <LinearLayout
                    android:id="@+id/tab_one_container"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingTop="20dp"
                    android:paddingBottom="40dp"
                    android:paddingRight="0dp"
                    android:paddingLeft="10dp"
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal"
                    >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:orientation="vertical"
                    >
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="0.3"
                        android:layout_gravity="center_horizontal"
                        android:orientation="vertical"
                        >
                    <Button
                        android:id="@+id/colorGreen"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:fontFamily="sans-serif-condensed"
                        android:textSize="12dp"
                        android:background="#9aff98"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="0.3"
                        android:layout_gravity="center_horizontal"
                        android:orientation="vertical"
                        >
                    <Button
                        android:id="@+id/colorBlue"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:fontFamily="sans-serif-condensed"
                        android:textSize="12dp"
                        android:background="#00dddd"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="0.3"
                        android:layout_gravity="center_horizontal"
                        android:orientation="vertical"
                        >
                    <Button
                        android:id="@+id/colorOrange"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:fontFamily="sans-serif-condensed"
                        android:textSize="12dp"
                        android:background="#ffb504"/>

                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    >



                    <com.larswerkman.holocolorpicker.ColorPicker
                        android:id="@+id/picker"
                        android:layout_width="180dp"
                        android:layout_height="180dp"
                        android:layout_gravity="center_horizontal"
                        />

                    <com.larswerkman.holocolorpicker.ValueBar
                        android:id="@+id/vbar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        />
                    <com.larswerkman.holocolorpicker.SaturationBar
                        android:id="@+id/sbar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/tab_two_container"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="15dp"
                    android:orientation="vertical"
                    android:padding="10dp"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        >


                        <Button
                            android:id="@+id/appN"
                            android:layout_width="320px"
                            android:layout_height="wrap_content"
                            android:text="AppN"
                            android:textSize="10dp"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="320px"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal"
                        >


                        <emperatriz.mchprofessional.VerticalButton
                            android:id="@+id/appW"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="AppW"
                            android:textSize="10dp"/>
                        <Button
                            android:id="@+id/appC"
                            android:layout_width="320px"
                            android:layout_height="320px"
                            android:text="AppC"
                            android:textSize="10dp"
                            />

                        <emperatriz.mchprofessional.VerticalButton
                            android:id="@+id/appE"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="AppE"
                            android:textSize="10dp"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        >

                        <Button
                            android:id="@+id/appS"
                            android:layout_width="320px"
                            android:layout_height="wrap_content"
                            android:text="AppS"
                            android:textSize="10dp"
                            />


                    </LinearLayout>
                </LinearLayout>
            </FrameLayout>
        </RelativeLayout>
    </TabHost>


</LinearLayout>
